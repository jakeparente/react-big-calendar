{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/react-big-calendar/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "lib"]
}
